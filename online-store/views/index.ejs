    <!-- The Modal -->
    <div id="myModal" class="modal">

      <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>

        <section id="portfolio-details" class="portfolio-details">
          <div class="container">

            <div class="row gy-4">

              <div class="col-lg-8">
                <div class="portfolio-details-slider swiper-container">
                  <div class="swiper-wrapper align-items-center">

                    <div class="swiper-slide">
                      <img src="" alt="" id="gunImage1">
                    </div>

                    <div class="swiper-slide">
                      <img src="" alt="" id="gunImage2">
                    </div>

                  </div>
                  <div class="swiper-pagination"></div>
                </div>
              </div>

              <div class="col-lg-4">
                <div class="portfolio-info">
                  <h6 id="gunNumber">-1</h6>
                  <h3 id="gunName">Gun Name</h3>
                  <div class="col-lg-12 pb-3 text-center">
                    <button class="btn btn-primary" onclick="addCart()">Add to cart</button>
                  </div>
                  <ul id="gunInfo">
                    <li><strong>Type</strong>: <span id="gunType">Type</span> </li>
                    <li><strong>Price</strong>: <span id="gunPrice">Price</span> </li>
                    <li><strong>Description</strong>: <span id="gunDescription">Description</span> </li>
                    <li><a href="https://www.google.com/?"><strong>Buy directly</strong></a></li>
                    <hr>
                  </ul>
                  <div class="col-lg-12 text-center">
                    <audio controls>
                      <source src="/audio/M_60_Machine_Gun_Sound_effect.mp3" type="audio/mpeg" id="gunSound">
                    </audio>
                  </div>
                </div>
              </div>

            </div>

          </div>
        </section>

      </div>

    </div><!-- End Modal Div -->

    <!-- The Shopping Cart Modal -->
    <div id="myCart" class="modal">

      <!-- Shopping Cart content -->
      <div class="modal-content">
        <span class="close">&times;</span>

        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col" class="border-0 bg-light">
                  <div class="p-2 px-3 text-uppercase">Product</div>
                </th>
                <th scope="col" class="border-0 bg-light">
                  <div class="py-2 text-uppercase">Price</div>
                </th>
                <th scope="col" class="border-0 bg-light">
                  <div class="py-2 text-uppercase">Quantity</div>
                </th>
                <th scope="col" class="border-0 bg-light">
                  <div class="py-2 text-uppercase">Remove</div>
                </th>
              </tr>
            </thead>
            <tbody id="cartList">
            </tbody>
          </table>
        </div>

      </div><!-- End Shopping Cart Modal Div -->

