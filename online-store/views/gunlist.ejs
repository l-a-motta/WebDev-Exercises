<%- include('include/header.ejs') %>
<%- include('include/cta.ejs') %>
  <h1>Gun List</h1>
  <ul>
    <%
      var list = '';
      for (i = 0; i < gunlist.length; i++) 
      {
        list += '<div class="col-lg-4 col-md-6 portfolio-item filter-' + gunlist[i].type + '">' +
          '<div class="portfolio-img"><img src="/img/portfolio/portfolio-' + gunlist[i].number + '.jpg" class="img-fluid" alt=""></div>' +
          '<div class="portfolio-info">' +
          '<h4>' + gunlist[i].name + '</h4>' +
          '<p>' + gunlist[i].type + '</p>' +
          '<a href="/img/portfolio/portfolio-' + gunlist[i].number + '.jpg" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" title="' + gunlist[i].name + '"><i class="bx bx-plus"></i></a>' +
          '<a class="details-link" title="More Details" id="' + gunlist[i].number + '" onclick="showModal(this.id)"><i class="bx bx-link"></i></a>' +
          '</div>' +
          '</div>';
      }
    %>
    <%- list %>
  </ul>
<%- include('include/footer.ejs') %>